@import '../../style/common.wxss';
.rmd-today-goods {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.rmd-today-goods-item {
  overflow: hidden;
  border-radius: 20rpx;
  border: 2rpx solid #f3f3f3;
  background-color: #fff;
  display: inline-block;
  margin-bottom: 10rpx;
  width: 49%;
}
.rmd-today-goods-item .today-pic {
  padding-bottom: 10rpx;
  width: 348rpx;
  height: 348rpx;
}
.rmd-today-goods-item .today-pic image {
  display: block;
  width: 100%;
  height: 100%;
}
.rmd-today-goods-item .today-title {
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding: 0 20rpx;
  font-size: 26rpx;
  height: 52rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
}
.rmd-today-goods-item .today-bottom {
  padding: 10rpx;
}
.today-bottom .price {
  line-height: 1;
  margin-right: 10rpx;
  display: inline-block;
}
.today-bottom-price text {
  font-weight: 500;
  color: #e83628;
}
.today-bottom-price text:nth-child(1) {
  font-size: 25rpx;
}
.today-bottom-price text:nth-child(2) {
  font-size: 40rpx;
}
.disabled text {
  color: #b2b2b2;
  text-decoration: line-through;
  font-size: 25rpx;
}