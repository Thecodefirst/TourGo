/* back-top */
.back-top {
    box-sizing: border-box;
    padding: 10rpx;
    position: fixed;
    bottom: 120rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    text-align: center;
    border-radius: 50%;
    border: 1rpx solid #f3f3f3;
    box-shadow: 5rpx 5rpx 10rpx #999;
    z-index: 300;
    width: 80rpx;
    height: 80rpx;
  }
  .back-top image {
    display: inline-block;
    width: 100%;
    height: 100%;
  }